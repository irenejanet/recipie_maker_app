<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Recipe_Maker_Frontend.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Recipe_Maker_Frontend"
    Shell.FlyoutBehavior="Disabled"
    Shell.TabBarBackgroundColor="DarkOrange"
    Title="Recipe_Maker_Frontend">


    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"/>
        <ShellContent
            Title="Favourites"
            ContentTemplate="{DataTemplate local:FavRecipesPage}"/>
        <ShellContent
            Title="About"
            ContentTemplate="{DataTemplate local:AboutPage}"/>
    </TabBar>

</Shell>
